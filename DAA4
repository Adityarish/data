// Program 4: BFS and DFS

#include<stdio.h>

int n;
int adj[20][20];
int visited[20];

int queue[20], front = 0, rear = -1;
int stack[20], top = -1;

void BFS(int start){
    for(int i = 0;i<n;i++) visited[i] = 0;
    front = 0, rear = -1;
    queue[++rear] = start;
    visited[start] = 1;
    printf("BFS traversal: ");
    while(front<=rear){
        int u = queue[front++];
        printf("%d ", u);
        for(int i = 0;i<n;i++){
            if(adj[u][i] == 1 && visited[i] == 0){
                queue[++rear] = i;
                visited[i] = 1;
            }
        }
    }
    printf("\n");
}

void DFS(int start){
    for(int i = 0;i<n;i++) visited[i] = 0;
    top = -1;
    stack[++top] = start;
    printf("DFS Traversal: ");
    while(top != -1){
        int u = stack[top--];
        if(visited[u]) continue;
        visited[u] = 1;
        printf("%d ", u);
        for(int i = n-1;i>=0;i--){
            if(adj[u][i] == 1 && !visited[i]) stack[++top] = i;
        }
     }
     printf("\n");
}

int main(){
    int start;
    printf("Enter the number of vertices: ");
    scanf("%d", &n);
    printf("Enter the adjaceny matrix: \n");
    for(int i =0;i<n;i++) for(int j = 0;j<n;j++) scanf("%d", &adj[i][j]);
    printf("Enter the starting node: ");
    scanf("%d",&start);
    BFS(start);
    DFS(start);
    return 0;
}
