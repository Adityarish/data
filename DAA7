// Program Kruskal's Algorithm
// step : Global  cost[][], parent[], n, ne = 1, minCost , Helper func: find(i) -> while(parent[i]) i = parent[i] return i; uni(i, j) ->  (i != j) parent[j] = i, return 1 else return 0;
// Main function : min, a , b, u, v, take n, cost matrix if 0 -> 999 then print egdes of min spanning tree :
// while(ne < n) -> min = 999 for i = 1-> n and j = 1->n if cost[i][j] < min then min = cost[i][j] , a=u=i, b=v=j after this find(u)andfind(v)
// if(uni(i,j))-> print edge minCost += min , at last cost[a][b] = cost[b][a] = 999 print  minCost


#include<stdio.h>
#include<stdlib.h>

int cost[10][10], parent[10];
int n, ne = 1;
int minCost = 0;

int find(int i){
    while(parent[i]) i = parent[i];
    return i;
}

int uni(int i, int j){
    if(i != j){
        parent[j] = i;
        return 1;
    }
    return 0;
}

int main(){
    int min, a, b, u, v;
    printf("Enter the no. of vertices:\n");
    scanf("%d", &n);

    printf("Enter the cost adjacency matrix:\n");
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n; j++) {
            scanf("%d", &cost[i][j]);
            if (cost[i][j] == 0)
                cost[i][j] = 999;
        }
    }
    
    printf("The edges of the minimum cost spanning tree are : \n");
    while(ne < n){
        min = 999;
        for(int i = 1;i<=n;i++){
            for(int j = 1;j<=n;j++){
                if(cost[i][j] < min){
                    min = cost[i][j];
                    a = u = i;
                    b = v = j;
                }
            }
        }
        u = find(u);
        v = find(v);
        if(uni(u, v)){
            printf("%d edge (%d,%d) = %d\n", ne++, a, b, min);
            minCost += min;
        }
        cost[a][b] = cost[b][a] = 999;
    }
    printf("Minimum cost = %d\n",minCost);
    return 0;
}
