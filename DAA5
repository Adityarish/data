// Program 5: Floyd's Warshall

#include <stdio.h>
#define INF 99999

int n;
int graph[20][20];

int min(int a, int b){
    return a < b ? a : b;
}
void floydWarshall(int cost[20][20]){
    for(int k = 0;k<n;k++){
        for(int i = 0;i<n;i++){
            for(int j = 0;j<n;j++){
                cost[i][j] = min(cost[i][j], cost[i][k]+cost[k][j]);
            }
        }
    }
    printf("Shortest distance matrix: \n");
    for(int i = 0;i<n;i++){
        for(int j = 0;j<n;j++){
            if(cost[i][j] >= INF) printf("INF\t");
            else printf("%d\t", cost[i][j]);
        }
        printf("\n");
    }
}

int main(){
    printf("Enter the number of vertices: ");
    scanf("%d",&n);
    printf("Enter the adjaceny matrix\n");
    for(int i=0;i<n;i++){
        for(int j = 0;j<n;j++){
            scanf("%d",&graph[i][j]);
        }
    }
    floydWarshall(graph);
    return 0;
}
